<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="wrap_content"
        android:background="@drawable/offer_card_bg"
        android:layout_width="match_parent">

    <TextView
            android:id="@+id/tvOfferCode"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            tools:text="Your Code : HARU-90"
            android:padding="8dp"
            android:textSize="16sp"
            android:textColor="@color/colorTextPrimary"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tvOffer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvOfferCode"
            android:layout_width="0dp"
            tools:text="Your Offer : Winter Sale 50%"
            android:padding="8dp"
            android:textSize="16sp"
            android:textColor="@color/colorTextPrimary"
            android:layout_height="wrap_content"/>

    <TextView
            android:padding="8dp"
            tools:text="Vendor_Name"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvVendor"
            app:layout_constraintEnd_toStartOf="@+id/tvExpiryDate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="@+id/tvExpiryDate"
            app:layout_constraintHorizontal_chainStyle="spread_inside"/>

    <TextView
            android:padding="8dp"
            android:textSize="14sp"
            tools:text="Date of Expiry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvExpiryDate"
            app:layout_constraintStart_toEndOf="@+id/tvVendor"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvOffer"/>

</androidx.constraintlayout.widget.ConstraintLayout>